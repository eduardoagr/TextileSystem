<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="TextileSystem.Controls.MenuTileView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">

    <VerticalStackLayout
        HorizontalOptions="Center"
        Spacing="10"
        VerticalOptions="Center">

        <!--  BORDER WITH IMAGE ONLY  -->
        <Border Margin="8" BackgroundColor="{Binding TileColor, Source={x:Reference Root}}">
            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">

                <Image
                    HeightRequest="48"
                    Source="{Binding Tile.Icon, Source={x:Reference Root}}"
                    WidthRequest="48" />

            </VerticalStackLayout>
        </Border>

        <!--  LABEL OUTSIDE THE BORDER  -->
        <Label
            Margin="0,-14,0,0"
            FontAttributes="Bold"
            FontSize="10"
            HorizontalTextAlignment="Center"
            LineBreakMode="CharacterWrap"
            Text="{Binding Tile.Title, Source={x:Reference Root}}" />

    </VerticalStackLayout>


</ContentView>