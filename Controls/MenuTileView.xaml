<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="TextileSystem.Controls.MenuTileView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">

        <!--  CARTOON TILE  -->
        <Grid>

            <!--  HARD SHADOW (FAKE SHADOW LAYER)  -->
            <Border
                Margin="12"
                BackgroundColor="#2A2A2A"
                StrokeShape="RoundRectangle 14"
                TranslationX="4"
                TranslationY="4" />

            <!--  MAIN TILE  -->
            <Border
                Margin="12"
                BackgroundColor="{Binding TileColor, Source={x:Reference Root}}"
                Stroke="White"
                StrokeShape="RoundRectangle 14"
                StrokeThickness="4">

                <VerticalStackLayout
                    Padding="14"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">

                    <Image
                        HeightRequest="32"
                        Source="{Binding Tile.Icon, Source={x:Reference Root}}"
                        WidthRequest="32" />
                </VerticalStackLayout>
            </Border>

        </Grid>

        <!--  LABEL  -->
        <Label
            FontAttributes="Bold"
            FontSize="14"
            HorizontalTextAlignment="Center"
            MaxLines="2"
            Text="{Binding Tile.Title, Source={x:Reference Root}}" />

    </VerticalStackLayout>


</ContentView>