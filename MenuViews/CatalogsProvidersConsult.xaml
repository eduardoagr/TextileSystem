<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TextileSystem.MenuViews.CatalogsProvidersConsult"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="http://schemas.textilesystem.com/maui"
    xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
    xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    xmlns:loc="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
    xmlns:pop="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
    x:DataType="app:CatalogsProvidersConsultViewModel">

    <Grid
        Padding="10"
        ColumnDefinitions="1200,*"
        RowDefinitions="46,*"
        RowSpacing="10">

        <editors:SfComboBox />

        <app:CustomButton
            x:Name="PopupAnchor"
            Grid.Column="1"
            Command="{x:Binding CreateUserProviderCommand}"
            CornerRadius="8"
            HorizontalOptions="End"
            Text="{loc:Translate Ui_NewSupplier}"
            VerticalOptions="Center" />

        <Border Grid.Row="1" Grid.ColumnSpan="2">
            <CollectionView>
                <CollectionView.Header>
                    <Grid ColumnDefinitions="300,300,300,300,60">
                        <Label FontAttributes="Bold" Text="{loc:Translate Ui_Name}" />
                        <Label
                            Grid.Column="1"
                            FontAttributes="Bold"
                            Text="{loc:Translate Ui_Address}" />
                        <Label
                            Grid.Column="2"
                            FontAttributes="Bold"
                            Text="{loc:Translate Ui_Phone}" />
                        <Label
                            Grid.Column="3"
                            FontAttributes="Bold"
                            Text="{loc:Translate Ui_Notes}" />
                        <Label
                            Grid.Column="4"
                            FontAttributes="Bold"
                            Text="{loc:Translate Ui_Status}" />

                    </Grid>
                </CollectionView.Header>
            </CollectionView>
        </Border>

        <pop:SfPopup
            AnimationMode="Zoom"
            AutoSizeMode="Height"
            IsOpen="{x:Binding IsCreateProviderDialogOpen}"
            RelativePosition="AlignBottomRight"
            RelativeView="{x:Reference PopupAnchor}"
            ShowHeader="False"
            StaysOpen="True"
            WidthRequest="400">

            <pop:SfPopup.PopupStyle>
                <pop:PopupStyle CornerRadius="8" PopupBackground="{x:AppThemeBinding Dark={x:StaticResource Black}, Light={x:StaticResource White}}" />
            </pop:SfPopup.PopupStyle>

            <pop:SfPopup.ContentTemplate>
                <DataTemplate>
                    <Grid Padding="10" RowDefinitions="80,200,80,200,*">
                        <!--  Input Fields  -->
                        <inputLayout:SfTextInputLayout Hint="{loc:Translate Ui_Name}">
                            <Entry />
                        </inputLayout:SfTextInputLayout>

                        <inputLayout:SfTextInputLayout Grid.Row="1" Hint="{loc:Translate Ui_Address}">
                            <Editor />
                        </inputLayout:SfTextInputLayout>

                        <inputLayout:SfTextInputLayout Grid.Row="2" Hint="{loc:Translate Ui_Phone}">
                            <Entry />
                        </inputLayout:SfTextInputLayout>

                        <inputLayout:SfTextInputLayout Grid.Row="3" Hint="{loc:Translate Ui_Notes}">
                            <Editor />
                        </inputLayout:SfTextInputLayout>

                        <HorizontalStackLayout
                            Grid.Row="4"
                            HorizontalOptions="End"
                            Spacing="10">
                            <app:CustomButton Command="{x:Binding ResetTexBoxCommand}" Text="{loc:Translate Ui_Clear}" />
                            <app:CustomButton Command="{x:Binding SaveToDatabaseCommand}" Text="{loc:Translate Ui_Save}" />

                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </pop:SfPopup.ContentTemplate>
        </pop:SfPopup>
    </Grid>

</ContentPage>
