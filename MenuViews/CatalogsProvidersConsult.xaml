<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TextileSystem.MenuViews.CatalogsProvidersConsult"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="http://schemas.textilesystem.com/maui"
    xmlns:sf="http://schemas.syncfusion.com/maui"
    x:DataType="app:CatalogsProvidersConsultViewModel">

    <Grid
        Padding="10"
        ColumnDefinitions="1200,*"
        RowDefinitions="46,*"
        RowSpacing="10">

        <sf:SfComboBox />

        <app:CustomButton
            x:Name="PopupAnchor"
            Grid.Column="1"
            Command="{x:Binding CreateUserProviderCommand}"
            CornerRadius="8"
            HorizontalOptions="End"
            Text="Nuevo proveedor"
            VerticalOptions="Center" />

        <Border Grid.Row="1" Grid.ColumnSpan="2">
            <CollectionView>
                <CollectionView.Header>
                    <Grid ColumnDefinitions="300,300,300,300,60">
                        <Label FontAttributes="Bold" Text="Nombre" />
                        <Label
                            Grid.Column="1"
                            FontAttributes="Bold"
                            Text="Dirección" />
                        <Label
                            Grid.Column="2"
                            FontAttributes="Bold"
                            Text="Teléfono" />
                        <Label
                            Grid.Column="3"
                            FontAttributes="Bold"
                            Text="Observaciones" />
                        <Label
                            Grid.Column="4"
                            FontAttributes="Bold"
                            Text="Estado" />
                    </Grid>
                </CollectionView.Header>
            </CollectionView>
        </Border>

        <sf:SfPopup
            AnimationMode="Zoom"
            AutoSizeMode="Height"
            IsOpen="{x:Binding IsCreateProviderDialogOpen}"
            RelativePosition="AlignBottomRight"
            RelativeView="{x:Reference PopupAnchor}"
            ShowHeader="False"
            StaysOpen="True"
            WidthRequest="400">

            <sf:SfPopup.PopupStyle>
                <sf:PopupStyle CornerRadius="8" PopupBackground="{x:AppThemeBinding Dark={x:StaticResource Black}, Light={x:StaticResource White}}" />
            </sf:SfPopup.PopupStyle>

            <sf:SfPopup.ContentTemplate>
                <DataTemplate>
                    <Grid Padding="10" RowDefinitions="80,200,80,200,*">
                        <!--  Input Fields  -->
                        <sf:SfTextInputLayout Hint="Nombre">
                            <Entry />
                        </sf:SfTextInputLayout>

                        <sf:SfTextInputLayout Grid.Row="1" Hint="Dirección">
                            <Editor />
                        </sf:SfTextInputLayout>

                        <sf:SfTextInputLayout Grid.Row="2" Hint="Teléfonos">
                            <Entry />
                        </sf:SfTextInputLayout>

                        <sf:SfTextInputLayout Grid.Row="3" Hint="Observaciones">
                            <Entry />
                        </sf:SfTextInputLayout>

                        <HorizontalStackLayout
                            Grid.Row="4"
                            HorizontalOptions="End"
                            Spacing="10">
                            <app:CustomButton Command="{x:Binding ResetTexBoxCommand}" Text="Borrar" />
                            <app:CustomButton Command="{x:Binding SaveToDatabaseCommand}" Text="Guardar" />
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </sf:SfPopup.ContentTemplate>
        </sf:SfPopup>
    </Grid>
</ContentPage>
