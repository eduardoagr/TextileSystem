<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TextileSystem.MenuViews.CatalogsUsers"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:TextileSystem.Controls"
    xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core">


    <Grid Padding="10" RowDefinitions="80,80,80,80,*">
        <inputLayout:SfTextInputLayout Hint="Nombre">
            <Entry />
        </inputLayout:SfTextInputLayout>

        <inputLayout:SfTextInputLayout Grid.Row="1" Hint="Usuario">
            <Entry />
        </inputLayout:SfTextInputLayout>

        <inputLayout:SfTextInputLayout
            Grid.Row="2"
            EnablePasswordVisibilityToggle="True"
            Hint="Password">
            <Entry IsPassword="True" />
        </inputLayout:SfTextInputLayout>

        <inputLayout:SfTextInputLayout
            Grid.Row="3"
            EnablePasswordVisibilityToggle="True"
            Hint="Confirmacion">
            <Entry IsPassword="True" />
        </inputLayout:SfTextInputLayout>

        <HorizontalStackLayout
            Grid.Row="4"
            HorizontalOptions="End"
            Spacing="5"
            VerticalOptions="End">
            <controls:CustomButton Text="Limpiar" />
            <controls:CustomButton Text="Guardar" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>