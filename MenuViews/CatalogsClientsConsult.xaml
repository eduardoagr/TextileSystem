<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TextileSystem.MenuViews.CatalogsClientsConsult"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="http://schemas.textilesystem.com/maui"
    xmlns:sf="http://schemas.syncfusion.com/maui"
    x:DataType="app:CatalogsClientsConsultViewModel">

    <Grid
        Padding="10"
        ColumnDefinitions="1200,*"
        RowDefinitions="46,*"
        RowSpacing="10">

        <!-- Syncfusion ComboBox -->
        <sf:SfComboBox />

        <!-- Custom button from your app -->
        <app:CustomButton
            x:Name="PopupAnchor"
            Grid.Column="1"
            Command="{Binding CreateNewClientCommand}"
            CornerRadius="8"
            HorizontalOptions="End"
            Text="Nuevo Cliente"
            VerticalOptions="Center" />

        <!-- CollectionView with header -->
        <Border Grid.Row="1" Grid.ColumnSpan="2">
            <CollectionView>
                <CollectionView.Header>
                    <Grid ColumnDefinitions="300,300,300,300,60">
                        <Label FontAttributes="Bold" Text="Nombre" />
                        <Label Grid.Column="1" FontAttributes="Bold" Text="Direcccion" />
                        <Label Grid.Column="2" FontAttributes="Bold" Text="telefono" />
                        <Label Grid.Column="3" FontAttributes="Bold" Text="Observaciones" />
                        <Label Grid.Column="4" FontAttributes="Bold" Text="Estado" />
                    </Grid>
                </CollectionView.Header>
            </CollectionView>
        </Border>

        <!-- Syncfusion Popup -->
        <sf:SfPopup
            AnimationMode="Zoom"
            AutoSizeMode="Height"
            IsOpen="{Binding IsCreateClientDialogOpen}"
            RelativePosition="AlignBottomRight"
            RelativeView="{x:Reference PopupAnchor}"
            ShowHeader="False"
            StaysOpen="True"
            WidthRequest="400">

            <sf:SfPopup.PopupStyle>
                <sf:PopupStyle CornerRadius="8" 
                               PopupBackground="{x:AppThemeBinding Dark={x:StaticResource Black}, Light={x:StaticResource White}}" />
            </sf:SfPopup.PopupStyle>

            <sf:SfPopup.ContentTemplate>
                <DataTemplate>
                    <Grid Padding="10" RowDefinitions="80,200,80,200,*">

                        <sf:SfTextInputLayout Hint="Nombre">
                            <Entry />
                        </sf:SfTextInputLayout>

                        <sf:SfTextInputLayout Grid.Row="1" Hint="Dirrecion">
                            <Editor />
                        </sf:SfTextInputLayout>

                        <sf:SfTextInputLayout Grid.Row="2" Hint="Telefonos">
                            <Entry />
                        </sf:SfTextInputLayout>

                        <sf:SfTextInputLayout Grid.Row="3" Hint="Observaciones">
                            <Entry IsPassword="True" />
                        </sf:SfTextInputLayout>

                        <HorizontalStackLayout
                            Grid.Row="4"
                            HorizontalOptions="End"
                            Spacing="10">

                            <app:CustomButton Command="{Binding ResetTexBoxCommand}" Text="borrar" />
                            <app:CustomButton Command="{Binding SaveToDatabaseCommand}" Text="Guardar" />

                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </sf:SfPopup.ContentTemplate>

        </sf:SfPopup>

    </Grid>
</ContentPage>
