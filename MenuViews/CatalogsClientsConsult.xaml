<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TextileSystem.MenuViews.CatalogsClientsConsult"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="http://schemas.textilesystem.com/maui"
    xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
    xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    xmlns:loc="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
    xmlns:pop="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    x:DataType="app:CatalogsClientsConsultViewModel">

    <ContentPage.Resources>
        <x:Array x:Key="DummyItems" Type="{x:Type sys:Int32}">
            <sys:Int32>1</sys:Int32>
            <sys:Int32>2</sys:Int32>
            <sys:Int32>3</sys:Int32>
        </x:Array>
    </ContentPage.Resources>

    <Grid
        Padding="10"
        ColumnDefinitions="1200,*"
        RowDefinitions="46,*"
        RowSpacing="10">

        <editors:SfComboBox />

        <app:CustomButton
            x:Name="PopupAnchor"
            Grid.Column="1"
            Command="{Binding CreateNewClientCommand}"
            CornerRadius="8"
            HorizontalOptions="End"
            Text="{loc:Translate Ui_NewClient}"
            VerticalOptions="Center" />

        <Border Grid.Row="1" Grid.ColumnSpan="2">
            <CollectionView ItemsSource="{StaticResource DummyItems}">
                <CollectionView.Header>
                    <Grid ColumnDefinitions="300,300,300,300,60">
                        <Border Stroke="LightGray" StrokeThickness="1">
                            <Label FontAttributes="Bold" Text="{loc:Translate Ui_Name}" />
                        </Border>

                        <Border
                            Grid.Column="1"
                            Stroke="LightGray"
                            StrokeThickness="1">
                            <Label FontAttributes="Bold" Text="{loc:Translate Ui_Address}" />
                        </Border>

                        <Border
                            Grid.Column="2"
                            Stroke="LightGray"
                            StrokeThickness="1">
                            <Label FontAttributes="Bold" Text="{loc:Translate Ui_Phone}" />
                        </Border>

                        <Border
                            Grid.Column="3"
                            Stroke="LightGray"
                            StrokeThickness="1">
                            <Label FontAttributes="Bold" Text="{loc:Translate Ui_Notes}" />
                        </Border>

                        <Border
                            Grid.Column="4"
                            Stroke="LightGray"
                            StrokeThickness="1">
                            <Label FontAttributes="Bold" Text="{loc:Translate Ui_Status}" />
                        </Border>
                    </Grid>

                </CollectionView.Header>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="300,300,300,300,60">
                            <Border Stroke="LightGray" StrokeThickness="1">
                                <Label Text="1" />
                            </Border>

                            <Border
                                Grid.Column="1"
                                Stroke="LightGray"
                                StrokeThickness="1">
                                <Label Text="2" />
                            </Border>

                            <Border
                                Grid.Column="2"
                                Stroke="LightGray"
                                StrokeThickness="1">
                                <Label Text="3" />
                            </Border>

                            <Border
                                Grid.Column="3"
                                Stroke="LightGray"
                                StrokeThickness="1">
                                <Label Text="4" />
                            </Border>

                            <Border
                                Grid.Column="4"
                                Stroke="LightGray"
                                StrokeThickness="1">
                                <Label Text="5" />
                            </Border>
                        </Grid>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Border>

        <pop:SfPopup
            AnimationMode="Zoom"
            AutoSizeMode="Height"
            IsOpen="{Binding IsCreateClientDialogOpen}"
            RelativePosition="AlignBottomRight"
            RelativeView="{x:Reference PopupAnchor}"
            ShowHeader="False"
            StaysOpen="True"
            WidthRequest="400">

            <pop:SfPopup.PopupStyle>
                <pop:PopupStyle CornerRadius="8" PopupBackground="{x:AppThemeBinding Dark={x:StaticResource Black}, Light={x:StaticResource White}}" />
            </pop:SfPopup.PopupStyle>

            <pop:SfPopup.ContentTemplate>
                <DataTemplate>
                    <Grid Padding="10" RowDefinitions="80,200,80,200,*">

                        <inputLayout:SfTextInputLayout Hint="{loc:Translate Ui_Name}">
                            <Entry />
                        </inputLayout:SfTextInputLayout>

                        <inputLayout:SfTextInputLayout Grid.Row="1" Hint="{loc:Translate Ui_Address}">
                            <Editor />
                        </inputLayout:SfTextInputLayout>

                        <inputLayout:SfTextInputLayout Grid.Row="2" Hint="{loc:Translate Ui_Phone}">
                            <Entry />
                        </inputLayout:SfTextInputLayout>

                        <inputLayout:SfTextInputLayout Grid.Row="3" Hint="{loc:Translate Ui_Notes}">
                            <Editor />
                        </inputLayout:SfTextInputLayout>

                        <HorizontalStackLayout
                            Grid.Row="4"
                            HorizontalOptions="End"
                            Spacing="10">

                            <app:CustomButton Command="{x:Binding ResetTexBoxCommand}" Text="{loc:Translate Ui_Clear}" />
                            <app:CustomButton Command="{x:Binding SaveToDatabaseCommand}" Text="{loc:Translate Ui_Save}" />


                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </pop:SfPopup.ContentTemplate>

        </pop:SfPopup>

    </Grid>
</ContentPage>
