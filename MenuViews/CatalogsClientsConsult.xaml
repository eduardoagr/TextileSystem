<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TextileSystem.MenuViews.CatalogsClientsConsult"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="http://schemas.textilesystem.com/maui"
    xmlns:loc="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
    xmlns:sf="http://schemas.syncfusion.com/maui"
    x:DataType="app:CatalogsClientsConsultViewModel">

    <Grid
        Padding="10"
        ColumnDefinitions="1200,*"
        RowDefinitions="46,*"
        RowSpacing="10">

        <sf:SfComboBox/>
        
        <app:CustomButton
            x:Name="PopupAnchor"
            Grid.Column="1"
            Command="{Binding CreateNewClientCommand}"
            CornerRadius="8"
            HorizontalOptions="End"
            Text="{loc:Translate Ui_NewClient}"
            VerticalOptions="Center" />

        <Border Grid.Row="1" Grid.ColumnSpan="2">
            <CollectionView>
                <CollectionView.Header>
                    <Grid ColumnDefinitions="300,300,300,300,60">
                        <Label FontAttributes="Bold" Text="{loc:Translate Ui_Name}" />
                        <Label
                            Grid.Column="1"
                            FontAttributes="Bold"
                            Text="{loc:Translate Ui_Address}" />
                        <Label
                            Grid.Column="2"
                            FontAttributes="Bold"
                            Text="{loc:Translate Ui_Phone}" />
                        <Label
                            Grid.Column="3"
                            FontAttributes="Bold"
                            Text="{loc:Translate Ui_Notes}" />
                        <Label
                            Grid.Column="4"
                            FontAttributes="Bold"
                            Text="{loc:Translate Ui_Status}" />
                    </Grid>
                </CollectionView.Header>
            </CollectionView>
        </Border>

        <sf:SfPopup
            AnimationMode="Zoom"
            AutoSizeMode="Height"
            IsOpen="{Binding IsCreateClientDialogOpen}"
            RelativePosition="AlignBottomRight"
            RelativeView="{x:Reference PopupAnchor}"
            ShowHeader="False"
            StaysOpen="True"
            WidthRequest="400">

            <sf:SfPopup.PopupStyle>
                <sf:PopupStyle CornerRadius="8" PopupBackground="{x:AppThemeBinding Dark={x:StaticResource Black}, Light={x:StaticResource White}}" />
            </sf:SfPopup.PopupStyle>

            <sf:SfPopup.ContentTemplate>
                <DataTemplate>
                    <Grid Padding="10" RowDefinitions="80,200,80,200,*">

                        <sf:SfTextInputLayout Hint="{loc:Translate Ui_Name}">
                            <Entry />
                        </sf:SfTextInputLayout>

                        <sf:SfTextInputLayout Grid.Row="1" Hint="{loc:Translate Ui_Address}">
                            <Editor />
                        </sf:SfTextInputLayout>

                        <sf:SfTextInputLayout Grid.Row="2" Hint="{loc:Translate Ui_Phone}">
                            <Entry />
                        </sf:SfTextInputLayout>

                        <sf:SfTextInputLayout Grid.Row="3" Hint="{loc:Translate Ui_Notes}">
                            <Editor />
                        </sf:SfTextInputLayout>

                        <HorizontalStackLayout
                            Grid.Row="4"
                            HorizontalOptions="End"
                            Spacing="10">

                            <app:CustomButton Command="{x:Binding ResetTexBoxCommand}" Text="{loc:Translate Ui_Clear}" />
                            <app:CustomButton Command="{x:Binding SaveToDatabaseCommand}" Text="{loc:Translate Ui_Save}" />


                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </sf:SfPopup.ContentTemplate>

        </sf:SfPopup>

    </Grid>
</ContentPage>
