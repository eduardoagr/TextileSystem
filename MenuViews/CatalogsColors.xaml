<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TextileSystem.MenuViews.CatalogsColors"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:TextileSystem.Controls"
    xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    xmlns:vm="clr-namespace:TextileSystem.MenuViewModels"
    x:DataType="vm:CatalogsColorsViewModel">

    <Grid Padding="10" RowDefinitions="80,*">
        <inputLayout:SfTextInputLayout Hint="Color">
            <Entry />
        </inputLayout:SfTextInputLayout>

        <controls:CustomButton
            Grid.Row="1"
            Command="{x:Binding SaveToDatabaseCommand}"
            CornerRadius="8"
            HorizontalOptions="End"
            Text="Guardar"
            VerticalOptions="End" />

    </Grid>
</ContentPage>