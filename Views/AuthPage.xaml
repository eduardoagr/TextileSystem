<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TextileSystem.Views.AuthPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:TextileSystem.Controls"
    xmlns:input="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    xmlns:vm="clr-namespace:TextileSystem.ViewModels"
    x:DataType="vm:AuthPageViewModel">

    <Grid
        Margin="20"
        RowDefinitions="80,80,80"
        VerticalOptions="Center">

        <input:SfTextInputLayout Hint="Usuario">
            <Entry />
        </input:SfTextInputLayout>

        <input:SfTextInputLayout Grid.Row="1" Hint="ContraseÃ±a">
            <Entry />
        </input:SfTextInputLayout>

        <controls:BusyButton
            Grid.Row="2"
            Margin="0,20,0,0"
            Command="{x:Binding SignInCommand}"
            IsBusy="{x:Binding isBusy}"
            Text="Login" />
    </Grid>
</ContentPage>