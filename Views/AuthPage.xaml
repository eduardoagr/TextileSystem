<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TextileSystem.Views.AuthPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="http://schemas.textilesystem.com/maui"
    xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    xmlns:loc="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
    x:DataType="app:AuthPageViewModel">

    <VerticalStackLayout Margin="20" VerticalOptions="Center">

        <inputLayout:SfTextInputLayout Hint="{loc:Translate Ui_Username}">
            <Entry />
        </inputLayout:SfTextInputLayout>

        <inputLayout:SfTextInputLayout Grid.Row="1" Hint="{loc:Translate Ui_Password}">
            <Entry />
        </inputLayout:SfTextInputLayout>

        <app:BusyButton
            Grid.Row="2"
            Command="{x:Binding SignInCommand}"
            IsBusy="{x:Binding IsBusy}"
            Text="{loc:Translate Ui_Login}"
            Color="#481662" />

    </VerticalStackLayout>
</ContentPage>